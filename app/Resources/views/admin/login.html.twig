{% extends 'base.html.twig' %}
{% block bodyparams %}
    class="body-background center-wrapper"
{% endblock %}
{% block html %}class="height-100"{% endblock %}
{% block body %}
    <div class="container center-content">
                <div class="row">
                    <div class="col-xs-3 col-sm-4"></div>
                    <div class="col-xs-6 col-sm-4 login-box">
                        <form action="{{ path("app_security_login_check") }}" method="post">
                            <div class="form-group">
                                <h2 class="text-center">Administration login</h2>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="_username">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" name="_password">
                            </div>
                            {% if error.message is defined %}
                                <div class="form-group">
                                    <div class="form-control allert alert-danger">{{ error.message }}</div>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <input class="btn btn-primary form-control" type="submit" value="Login">
                            </div>
                        </form>
                    </div>
                    <div class="col-xs-3 col-sm-4"></div>
                </div>
    </div>
{% endblock %}